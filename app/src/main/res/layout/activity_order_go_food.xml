<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fafafa"
    tools:context=".OrderGoFoodActivity">

    <ImageView
        android:layout_width="165dp"
        android:layout_height="155dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:src="@drawable/menu_gofood"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:text="Order Go Food"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/text_nama"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="Nama"/>
        <EditText
            android:id="@+id/editText_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Anda"
            android:layout_marginTop="12dp"
            android:layout_marginHorizontal="15dp"
            android:layout_toRightOf="@id/text_nama"/>

        <TextView
            android:id="@+id/text_alamat"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/text_nama"
            android:text="Alamat"/>
        <EditText
            android:id="@+id/editText_alamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="Alamat Anda"
            android:layout_marginHorizontal="15dp"
            android:layout_below="@id/editText_nama"
            android:layout_toRightOf="@id/text_alamat"/>

        <TextView
            android:id="@+id/text_pesan"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/text_alamat"
            android:text="Pesanan"/>
        <EditText
            android:id="@+id/editText_pesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Isi Pesan"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/editText_alamat"
            android:layout_toRightOf="@id/text_pesan"/>

        <Button
            android:id="@+id/button_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@id/text_pesan"
            android:layout_marginTop="35dp"
            android:layout_marginHorizontal="25dp"/>
    </RelativeLayout>

</LinearLayout>